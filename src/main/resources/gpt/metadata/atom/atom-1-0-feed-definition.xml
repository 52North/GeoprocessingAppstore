<schemas>
 <schema key="atom-1-0" editable="false">
 
  <!-- schema interrogation -->
  <namespace prefix="atom" uri="http://www.w3.org/2005/Atom"/>
    <interrogation
      count="count(//atom:feed//atom:title)"/>
      
  <!-- indexables -->
<indexables fileName="gpt/metadata/atom/atom-feed-indexables.xml"/>

    <!-- Title -->    
    <parameter>         
        <validation required="true"/>
        <content select="/atom:feed/atom:title"/>
    </parameter>  
    
    <!-- Updated -->    
    <parameter>         
        <validation required="false"/>
        <content select="/atom:feed/atom:updated" valueType="date"/>
    </parameter> 
    
    <!-- Author -->    
    <parameter>         
        <validation required="false"/>
        <content select="/atom:feed/atom:author/atom:name" />
    </parameter> 
    
    <!-- ID -->    
    <parameter>         
        <validation required="false"/>
        <content select="/atom:feed/atom:id" />
    </parameter> 
    
  </schema>

</schemas>
