<!DOCTYPE tiles-definitions PUBLIC
              "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
              "http://struts.apache.org/dtds/tiles-config_1_3.dtd">

<tiles-definitions>

	<!-- basic layout definitions -->
	<definition name=".gptLayout" path="/catalog/skins/centeredLayout.jsp">
		<put name="head" value="/catalog/skins/tiles/head.jsp"/>
		<put name="tertiaryNavigation" value="/catalog/skins/tiles/tertiaryNavigation.jsp"/>
		<put name="banner" value="/catalog/skins/tiles/banner.jsp"/>
		<put name="primaryNavigation" value="/catalog/skins/tiles/primaryNavigation.jsp"/>
		<put name="secondaryNavigation" value="/catalog/skins/tiles/secondaryNavigation.jsp"/>
		<put name="body" value="/catalog/main/home.jsp"/>
		<put name="footer" value="/catalog/skins/tiles/footer.jsp"/>
	</definition>
    
  <!-- popup layouts definitions -->
	<definition name=".gptPopup" path="/catalog/skins/popupLayout.jsp">
		<put name="body" value="/catalog/main/home.jsp"/>
	</definition>

  <!-- minimal layouts definitions -->
	<definition name=".gptLayoutMinimal" path="/catalog/skins/centeredLayoutMinimal.jsp">
		<put name="head" value="/catalog/skins/tiles/head.jsp"/>
		<put name="banner" value="/catalog/skins/tiles/banner.jsp"/>
		<put name="body" value="/catalog/main/home.jsp"/>
		<put name="footer" value="/catalog/skins/tiles/footer.jsp"/>
	</definition>

  <!-- preview layout definition -->
	<definition name=".gptPreview" path="/catalog/skins/previewLayout.jsp">
		<put name="head" value="/catalog/skins/tiles/head.jsp"/>
		<put name="banner" value="/catalog/skins/tiles/previewBanner.jsp"/>
		<put name="body" value="/catalog/main/home.jsp"/>
		<put name="footer" value="/catalog/skins/tiles/footer.jsp"/>
	</definition>
    
</tiles-definitions>
